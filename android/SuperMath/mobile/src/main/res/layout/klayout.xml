<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="2">

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Position="
        android:id="@+id/textView4"
        android:textSize="24dp"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Velocity(init)="
        android:id="@+id/textView5"
        android:textSize="24dp"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Acceleration="
        android:id="@+id/textView6"
        android:textSize="24dp"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Time="
        android:id="@+id/textView7"
        android:textSize="24dp"
        android:textColor="@color/abc_primary_text_material_light" />
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Clear All"
        android:onClick="onClickK"
        android:id="@+id/Clear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="265dp"
        android:text="Calculated using x=vt*1/2at^2"
        android:id="@+id/textView8"
        android:layout_gravity="center_vertical" />

</LinearLayout>


    <LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:paddingRight="50dp"
    android:layout_height="wrap_content">
    <EditText
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/xpos"
        android:hint="x(m)"
        android:gravity="center_horizontal"/>
    <EditText
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/velocity"
        android:hint="Vi(m/s)"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:inputType="numberDecimal|numberSigned"
        android:ems="10"
        android:id="@+id/accel"
        android:hint="a(m/s^2)"
        android:gravity="center_horizontal"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/time"
        android:hint="t(s)"
        android:gravity="center_horizontal"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Find"
            android:onClick="onClickK"
            android:id="@+id/KCalc" />
        <TextView
            android:layout_width="126dp"
            android:layout_height="87dp"
            android:text="Input three numbers and press find to calculate the missing variable"
            android:id="@+id/textView11"
            android:textColor="@color/abc_primary_text_material_light" />
    </LinearLayout>
</LinearLayout>