<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/AppTheme">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:text="Find the area under a quadratic"
        android:textSize="25dp"
        android:theme="@style/AppTheme"
        android:textColor="@color/abc_primary_text_material_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:id="@+id/editText"
        android:text="Enter the coefficients of a quadratic"
        android:textSize="18dp"
        android:theme="@style/AppTheme"
        android:textColor="@color/abc_primary_text_material_light" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/Ain"
            android:textAlignment="center"
            android:hint="A" />
        <EditText
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/Bin"
            android:hint="B"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/Cin"
            android:hint="C"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <TextView
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="Enter the domain"
        android:textSize="18dp"
        android:textColor="@color/abc_primary_text_material_light" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/ADin"
            android:hint="A" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:inputType="numberDecimal|numberSigned"
            android:ems="10"
            android:id="@+id/BDin"
            android:hint="B" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="45dp"
            android:text="Calculate"
            android:id="@+id/Calculate"
            android:onClick="onClickI"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area="
            android:id="@+id/textView"
            android:textSize="25dp"
            android:textColor="@color/abc_primary_text_material_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/Answer"
            android:layout_gravity="right" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="215dp"
        android:layout_weight="0.00"
        android:text="Found using the Fundamental theorem of Calculus"
        android:id="@+id/textView10"
        android:textAlignment="viewEnd" />

</LinearLayout>